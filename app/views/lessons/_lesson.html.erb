<article class="lesson">
  <section class="lesson-head">
    <h2><%= link_to lesson.title, lesson_path(lesson) %></h2>
    <section class="lesson-notes">
      <%= lesson.notes %>
    </section>
    <small>
      <time> <%= lesson.created_at.to_date.strftime("%d %B, %Y") %></time>
      |
      <%= link_to 'Изменить', edit_lesson_path(lesson) %>
      |
      <%= link_to 'Удалить', lesson_path(lesson), method: :delete, data: { confirm: 'Вы уверены?'}  %>
    </small>
  </section>


</article>

