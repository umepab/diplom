
<% if @schedule.errors.any? %>
    <div class="alert alert-danger">
      <h5> <%= t('common.errors') %></h5>
      <ul>
        <% @schedule.errors. full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>


<%= form_for @schedule, html: {multipartt: true} do |f| %>

    <div class="form-group">
      <%= f.label :group_id %>
      <%= f.collection_select :group_id, Group.order(:name), :id, :name, {include_blank: true}, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.nested_fields_for :lessons do |l| %>
          <%= l.remove_nested_fields_link %>
          <%= l.label :title %>
          <%= l.text_field :title, class: 'form-control' %>
      <%= f.add_nested_fields_link :lessons %>
    </div>
      <% end %>


    <div class="form-group">
      <%= f.label :room %>
      <%= f.text_field :room, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :day %>
      <%= f.text_field :day, class: 'form-control' %>
    </div>





    <div class="form-group">
      <%= f.submit t('.submit', action: @schedule.new_record? ? t('common.create') : t('common.edit')), class: 'btn btn-primary' %>
      <%= link_to t('common.back'), :back, class: 'btn btn-outline-secondary'  %>

    </div>


<% end %>