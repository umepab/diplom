<!DOCTYPE html>
  <head>
    <title>Diplom</title>
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>


<body>
        <div class="navbar clearfix">
          <div class="logo"><%= image_tag 'logo_247x48.png' %></div>
          <ul class="nav clearfix">
            <li><a href="">Главная</a></li>
            <li><a href="">Журнал</a></li>
            <li><a href="<% new_user_registration_path%>">Регистрация</a></li>
            <li><a href="<% new_user_session_path%>">Вход</a></li>

            <% if user_signed_in? %>
            <li><a href="<% destroy_user_session_path%>">Выход</a></li>
            <li><a href="<% new_lesson_path%>">Новый предмет</a></li>
                <% end%>
                </ul>
              </div>

  <div class="container main">
    <div class="row">
      <div class="col-md-12">
        <% flash.each do |name, message| %>
        <div class="alert alert-<% bootstrap_class_for(name) %>">
          <%= message %>
        </div>
        <% end %>
      </div>
    </div>
  <%= yield %>
  </div>



  </body>
</html>
