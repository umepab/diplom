<!DOCTYPE html>
<div>
  <head>
    <title>Diplom</title>
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>


  <nav class="navbar navbar-light bg-faded" >
    <a href="<%=lessons_path%>">
      <%= image_tag 'logo_247x48.png' %>
    </a>
    <% if user_signed_in? %>
    <ul class="nav justify-content-end "  >
      <li class="nav-item" style="border: solid 2.5px #d31e1e; border-radius: 8px">
        Михаил Юрьевич
      </li>
      <li class="nav-item" style="border: solid 2.5px #2b4c8e; border-radius: 50%">
            <%= image_tag 'default_avatar_40x40.png', height: 40, class: 'rounded-circle' %>
      </li>
      <li class="nav-item">
           <%= link_to 'Новый предмет', new_lesson_path, class: 'btn btn-outline-primary pull-xs-right' %>
      </li>
      <div class="btn-group">
        <%= link_to "Выход", destroy_user_session_path, method: :delete, class: "btn btn-default navbar-btn" %>
      </div>
    </ul>
      </nav>
      <% else %>

    </ul>
      <div class="btn-toolbar pull-right">
        <div class="btn-group">
          <%= link_to "Регистрация", new_user_registration_path, class: "btn btn-default navbar-btn" %>
        </div>
        <div class="btn-group">
          <%= link_to "Войти", new_user_session_path, class: "btn btn-default navbar-btn" %>
        </div>

      </nav>

  </div>
      </div>
      <% end %>
    <div class="btn-toolbar pull-right">
      <div class="btn-group">
        <%= link_to "Факультеты", faculties_path, class: "btn btn-default navbar-btn" %>
      </div>
      <div class="btn-group">
        <%= link_to "Группы", groups_path, class: "btn btn-default navbar-btn" %>
      </div>
      <div class="btn-group">
        <%= link_to "Специальности", specialities_path, class: "btn btn-default navbar-btn" %>
      </div>
      <div class="btn-group">
        <%= link_to "Расписание", '', class: "btn btn-default navbar-btn" %>
      </div>

    </div>

  <div class="container main">
    <div class="row">
      <div class="col-md-12">
        <% flash.each do |name, message| %>
        <div class="alert alert-<% bootstrap_class_for(name) %>">
          <%= message %>
        </div>
        <% end %>
      </div>
    </div>
  <%= yield %>
  </div>



  </body>
</html>
